<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.livescore_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ChooseDateActivity"
            android:label="Choose date"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ShowMatchesByDateActivity"
            android:label="Matches for selected days"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SavedMatchesActivity"
            android:label="Saved Matches"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ShowMatchesActivity"
            android:label="Matches for today"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>